@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="row second-chart-list third-news-update">
        <div class="col-md-4   morning-sec box-col-12">
            <div class="card o-hidden profile-greeting">
                <div class="card-body">
                    <div class="media">
                        <div class="badge-groups w-100">
                            <div class="badge f-12"><i class="me-1" data-feather="clock"></i><span id="txt"></span></div>

                        </div>
                    </div>
                    <div class="greeting-user text-center">
                        <div class="profile-vector"><img class="img-fluid" src="../assets/images/dashboard/welcome.png" alt=""></div>
                        <h4 class="f-w-600"><span id="greeting">Good Morning</span> <span class="right-circle"><i class="fa fa-check-circle f-14 middle"></i></span></h4>
                        <p><span> Today's earning is 2,000,000 TZS & you made 10 sales in the past 24 hours</span></p>
                        <div class="whatsnew-btn"><a class="btn btn-primary">View Report</a></div>
                        <div class="left-icon"><i class="fa fa-bell"> </i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 dashboard-sec box-col-12">
            <div class="card earning-card">
                <div class="card-body p-0">
                    <div class="row m-0">
                        <div class="col-xl-3 earning-content p-0">
                            <div class="row m-0 chart-left">
                                <div class="col-xl-12 p-0 left_side_earning">
                                    <h5>Dashboard</h5>
                                    <p class="font-roboto">Overview of last month</p>
                                </div>
                                <div class="col-xl-12 p-0 left_side_earning">
                                    <h5>12,000,000 TZS </h5>
                                    <p class="font-roboto">This Month Sales</p>
                                </div>
                                <div class="col-xl-12 p-0 left_side_earning">
                                    <h5>HP Laptop</h5>
                                    <p class="font-roboto">This Month Top Product</p>
                                </div>
                                <div class="col-xl-12 p-0 left_side_earning">
                                    <h5>Salim Kambangwa</h5>
                                    <p class="font-roboto">This Month Top Operator</p>
                                </div>

                            </div>
                        </div>
                        <div class="col-xl-9 p-0">
                            <div class="chart-right">
                                <div class="row m-0 p-tb">
                                    <div class="col-xl-8 col-md-8 col-sm-8 col-12 p-0">
                                        <div class="inner-top-left">
                                            <ul class="d-flex list-unstyled">
                                                <li>Daily</li>
                                                <li class="active">Weekly</li>
                                                <li>Monthly</li>
                                                <li>Yearly</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-xl-4 col-md-4 col-sm-4 col-12 p-0 justify-content-end">
                                        <div class="inner-top-right">
                                            <ul class="d-flex list-unstyled justify-content-end">
                                                <li>Kariakoo</li>
                                                <li>Others</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="card-body p-0">
                                            <div class="current-sale-container">
                                                <div id="chart-currently"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row border-top m-0">
                                <div class="col-xl-4 ps-0 col-md-6 col-sm-6">
                                    <div class="media p-0">
                                        <div class="media-left"><i class="icofont icofont-money"></i></div>
                                        <div class="media-body">
                                            <h6>Sales This Year</h6>
                                            <p>50,000,000</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-md-6 col-sm-6">
                                    <div class="media p-0">
                                        <div class="media-left bg-secondary"><i class="icofont icofont-location-pin"></i></div>
                                        <div class="media-body">
                                            <h6>Top Product -2021</h6>
                                            <p>HDMO Cables</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-md-12 pe-0">
                                    <div class="media p-0">
                                        <div class="media-left bg-warning"><i class="icofont icofont-ui-user"></i></div>
                                        <div class="media-body">
                                            <h6>Top Seller-2021</h6>
                                            <p>Zawadi Mziray </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12  chart_data_left box-col-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="row m-0 chart-main">
                        <div class="col-xl-3 col-md-6 col-sm-6 p-0 box-col-6">
                            <div class="media align-items-center">

                                <i class="fa fa-shopping-cart text-primary" style="font-size: 36px;"></i>

                                <div class="media-body">
                                    <div class="right-chart-content">
                                        <h4>@ViewData["total"]</h4><span>Total</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 col-sm-6 p-0 box-col-6">
                            <div class="media align-items-center">
                                <i class="fa fa-users text-success" style="font-size: 36px;"></i>
                                <div class="media-body">
                                    <div class="right-chart-content">
                                        <h4>@ViewData["completed"]</h4><span>Completed</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 col-sm-6 p-0 box-col-6">
                            <div class="media align-items-center">
                                <i class="fa fa-users text-warning" style="font-size: 36px;"></i>
                                <div class="media-body">
                                    <div class="right-chart-content">
                                        <h4>@ViewData["progress"]</h4><span>Progress </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
